<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="#fff"
    android:layout_margin="8dp"

    >


    <TextView
        android:id="@+id/general"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="For General Enquiry :"
        android:textSize="18sp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/office"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="College Office    :  "
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/num1"
            android:autoLink="phone"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="+91 824 2263753"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/admission"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="College Admission Office    :  "
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/num2"
            android:autoLink="phone"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="+91 824 2263753"/>

    </LinearLayout>



    <LinearLayout
        android:layout_marginTop="25dp"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/email"
            android:textColor="#000000"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email   :  "
            android:textSize="15sp"/>

        <TextView
            android:autoLink="email"
            android:id="@+id/email1"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="sjec@sjec.ac.in"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="25dp"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/website"
            android:textColor="#000000"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Website   :  "
            android:textSize="15sp"/>

        <TextView
            android:autoLink="web"
            android:id="@+id/link"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="https://www.sjec.ac.in"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="25dp"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/address"
            android:textColor="#000000"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address   :  "
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/add"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="St Joseph Engineering College Vamanjoor,
                    Mangaluru - 575028, Karnataka, India"/>

    </LinearLayout>





</LinearLayout>