<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:background="#fff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="SJEC Mangalore"
            android:textColor="#000"
            android:textSize="30sp"
            android:layout_marginTop="30dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Version 1.0"
            android:textColor="#000"
            android:textSize="20sp"
            android:layout_marginTop="10dp"/>


        <ImageView
            android:id="@+id/admin"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/sjec3"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="\u00a9 2019 St. Joseph Engineering College, Vamanjoor"
            android:textColor="#000"
            android:textSize="15sp"
            android:layout_marginTop="10dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:id="@+id/l1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"

                >

                <ImageView
                    android:id="@+id/facebook"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/facebook2"
                    android:layout_margin="20dp"
                    android:scaleType="centerCrop"/>

                <ImageView
                    android:id="@+id/youtube"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/youtube2"
                    android:layout_margin="20dp"
                    android:scaleType="centerCrop"/>

                <ImageView
                    android:id="@+id/twitter"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/twitter2"
                    android:layout_margin="20dp"
                    android:scaleType="centerCrop"/>


            </LinearLayout>


            <RelativeLayout
                android:id="@+id/l2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
               android:layout_alignParentBottom="true"
                android:paddingBottom="10dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/d1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Designed and Developed By :"
                        android:textSize="15sp"
                        android:textColor="#000"
                        android:layout_marginLeft="10dp"
                        />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                    <TextView
                        android:id="@+id/d2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Derick Jeson Pinto"
                        android:textSize="15sp"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Meghashree"/>
                    </LinearLayout>




                </LinearLayout>






            </RelativeLayout>




        </RelativeLayout>


    </LinearLayout>


</RelativeLayout>